{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/server", // ✅ changed
    "rootDir": "./src/server", // ✅ changed to match
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["src/server/**/*"], // ✅ only server code
  "exclude": ["node_modules"]
}
